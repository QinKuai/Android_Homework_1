<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <!-- ScorllView解决上下滑动-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="577dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/detail_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="34dp"
            android:text="课程名称"
            app:layout_constraintStart_toEndOf="@+id/detail_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="48dp"
            android:text="开课时间"
            app:layout_constraintStart_toEndOf="@+id/detail_image"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="183dp"
            android:layout_height="29dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="4dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deatail_opendate"
            android:layout_width="168dp"
            android:layout_height="29dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="48dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/detail_image"
            app:layout_constraintTop_toBottomOf="@+id/detail_name" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="407dp"
            android:layout_height="17dp"
            android:layout_marginTop="28dp"
            android:text="课程详情"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_image" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="407dp"
            android:layout_height="17dp"
            android:layout_marginTop="232dp"
            android:text="授课老师"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_image" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="407dp"
            android:layout_height="17dp"
            android:layout_marginTop="448dp"
            android:text="相关资源"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_image" />

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginTop="25dp"
            android:background="#0071D4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_image" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="412dp"
            android:layout_height="197dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <ImageView
                android:id="@+id/detail_image_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[5]" />

            <TextView
                android:id="@+id/deatail_teadesc6"
                android:layout_width="85dp"
                android:layout_height="31dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="127dp"
                android:text="教师邮箱"
                app:layout_constraintStart_toEndOf="@+id/detail_image_teacher"
                app:layout_constraintTop_toBottomOf="@+id/detail_teacher" />

            <TextView
                android:id="@+id/deatail_teadesc5"
                android:layout_width="85dp"
                android:layout_height="31dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="95dp"
                android:text="教师电话"
                app:layout_constraintStart_toEndOf="@+id/detail_image_teacher"
                app:layout_constraintTop_toBottomOf="@+id/detail_teacher" />

            <TextView
                android:id="@+id/deatail_teadesc"
                android:layout_width="163dp"
                android:layout_height="95dp"
                android:layout_marginStart="96dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/detail_image_teacher"
                app:layout_constraintTop_toBottomOf="@+id/detail_teacher" />

            <TextView
                android:id="@+id/deatail_teadesc4"
                android:layout_width="85dp"
                android:layout_height="31dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="1dp"
                android:text="教师描述"
                app:layout_constraintStart_toEndOf="@+id/detail_image_teacher"
                app:layout_constraintTop_toBottomOf="@+id/detail_teacher" />

            <TextView
                android:id="@+id/detail_teacher"
                android:layout_width="164dp"
                android:layout_height="27dp"
                android:layout_marginStart="96dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/detail_image_teacher"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_teacher2"
                android:layout_width="85dp"
                android:layout_height="29dp"
                android:layout_marginStart="11dp"
                android:text="教师名称"
                app:layout_constraintStart_toEndOf="@+id/detail_image_teacher"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/deatail_phone"
                android:layout_width="159dp"
                android:layout_height="31dp"
                android:layout_marginEnd="28dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deatail_teadesc" />

            <TextView
                android:id="@+id/deatail_email"
                android:layout_width="159dp"
                android:layout_height="31dp"
                android:layout_marginEnd="28dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deatail_phone" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="411dp"
            android:layout_height="186dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="85dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="课程介绍"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="104dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="80dp"
                android:text="课程价格与状态"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_desc"
                android:layout_width="269dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="TextView"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_price_status"
                android:layout_width="269dp"
                android:layout_height="40dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="20dp"
                android:text="TextView"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="32dp"
                android:text="证书"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/detail_cer"
                android:layout_width="269dp"
                android:layout_height="29dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:text="TextView"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginTop="8dp"
                android:background="#0071D4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_desc" />

            <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginTop="64dp"
                android:background="#0071D4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_desc" />

            <View
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginTop="3dp"
                android:background="#0071D4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_cer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="411dp"
            android:layout_height="236dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0" >


            <SurfaceView
                android:id="@+id/surface_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/download"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="240dp"
                android:text="分享"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="播放"
                app:layout_constraintStart_toEndOf="@+id/share"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/pause"
                android:layout_width="74dp"
                android:layout_height="48dp"
                android:text="暂停"
                app:layout_constraintStart_toEndOf="@+id/play"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>



